@model IEnumerable<WebApplication3.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Product</h2>
<a href="/Product/create">Create New Product</a>
<table class="table">
    <tr>
        <th>
            Product Id
        </th>
        <th>
            Product Name
        </th>
        <th>
            Category Id
        </th>
        <th>
            Category Name
        </th>
        <th>
            Action
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.ProductId
            </td>
            <td>
                @item.ProductName
            </td>
            <td>
                @item.Category.CategoryId
            </td>
            <td>
                @item.Category.CategoryName
            </td>
            <td>
                
                <a href="/Product/Edit/@item.ProductId">Update</a> /
                <a href="/Product/Delete/@item.ProductId">Delete</a>
            </td>
        </tr>
    }

</table>
